# =====================================================
# HICKMET PREMIUM - ENVIRONMENT VARIABLES
# Скопируйте этот файл как .env и заполните значения
# =====================================================

# === APPLICATION ===
APP_NAME=Hickmet Premium
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
DEBUG=True

# === SERVER ===
HOST=0.0.0.0
PORT=8000

# === DATABASE ===
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/hickmet
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Sync database URL (для Alembic миграций)
SYNC_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hickmet

# === REDIS ===
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10


SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7


CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True


CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=False


DISPATCH_DRY_RUN=False
# Режим отправки единый: partner/auth -> partner/queries/163/save
# DISPATCH_TARGET_URL оставлен для обратной совместимости, в текущем потоке не используется.
DISPATCH_TARGET_URL=https://report.fondkamkor.kz
DISPATCH_AUTH_URL=https://report.fondkamkor.kz/Voucher/partner/auth
DISPATCH_SAVE_URL=https://report.fondkamkor.kz/Voucher/partner/queries/163/save
DISPATCH_REQUEST_TIMEOUT_SECONDS=30
DISPATCH_MAX_ATTEMPTS=5
DISPATCH_RETRY_DELAY_SECONDS=60
DISPATCH_QUEUE_NAME=tour_dispatch

DISPATCH_MODULE=voucher
DISPATCH_SECTION=partner
DISPATCH_OBJECT=queries
DISPATCH_PARAM1=163
DISPATCH_PARAM2=save
DISPATCH_FORM_ID=163
DISPATCH_RETURN_FIELD=q_number
DISPATCH_AGENT_LOGIN=Hikmet_trevel
DISPATCH_AGENT_PASS=PAxcmx
DISPATCH_TOURAGENT_NAME=HICKMET PREMIUM
DISPATCH_TOURAGENT_BIN=240340000277
DISPATCH_DEFAULT_AIRLINE=KC
DISPATCH_DEFAULT_DOC_PRODUCTION=Ministry Of Internal Affairs
DISPATCH_DEFAULT_DOC_TYPE=паспорт
DISPATCH_DEFAULT_DOC_DATE=02.11.2016
DISPATCH_DEFAULT_RESIDENT=резидент
DISPATCH_DEFAULT_BIRTH_DATE=01.01.1970
DISPATCH_CLIENT_NAME_TEMPLATE=Client_$CID

# Поля формы partner/queries/163/save
DISPATCH_FILIAL_ID=1
DISPATCH_FIRM_ID=82
DISPATCH_FIRM_NAME=Хикмет Тревел
DISPATCH_Q_INTERNAL=1
DISPATCH_Q_AGENT_ASSIGN=0
DISPATCH_Q_CURRENCY=MRP
DISPATCH_Q_NUMBER_TEMPLATE=[tmpl_var query.firm.rowid][tmpl_var substr(params_hash.q_countryen,0,2)][tmpl_var substr(params_hash.q_date_from,3,1)][tmpl_var substr(params_hash.q_date_from,5,2)][tmpl_var substr(params_hash.q_date_from,8,2)]-[tmpl_var query.id]
DISPATCH_OFFER_COUNTER=0

# Поля формы partner/auth
DISPATCH_AUTH_JUMP2=/Voucher/partner/home
DISPATCH_AUTH_SUBMIT=Вход
DISPATCH_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/143.0.0.0 Safari/537.36 Edg/143.0.0.0
DISPATCH_ORIGIN=https://report.fondkamkor.kz
DISPATCH_AUTH_REFERER=https://report.fondkamkor.kz/Voucher/partner/auth
DISPATCH_SAVE_REFERER=https://report.fondkamkor.kz/Voucher/partner/addquery/touroperator

# === SELENIUM ===
SELENIUM_HEADLESS=True
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30
SELENIUM_SCREENSHOT_PATH=./uploads/screenshots

# Настройки госсайта
GOV_SITE_URL=https://gov-site.example.kz
GOV_SITE_USERNAME=your_username
GOV_SITE_PASSWORD=your_password

# === FILE STORAGE ===
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".xlsx", ".xls", ".csv"]

# === GOOGLE SHEETS ===
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
# Пример: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms

# === LOGGING ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# === SENTRY (Error Tracking) ===
SENTRY_DSN=  # Оставьте пустым если не используете
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT=development

# === EMAIL (для уведомлений) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hickmet.kz
SMTP_TLS=True

# === TELEGRAM (для уведомлений) ===
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# === FIRST RUN ===
# Создать администратора при первом запуске
CREATE_ADMIN_ON_STARTUP=True
ADMIN_EMAIL=admin@hickmet.kz
ADMIN_PASSWORD=admin123  # ИЗМЕНИТЕ В ПРОДАКШЕНЕ!
ADMIN_FULL_NAME=Системный администратор
