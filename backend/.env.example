# =====================================================
# HICKMET PREMIUM - ENVIRONMENT VARIABLES
# Скопируйте этот файл как .env и заполните значения
# =====================================================

# === APPLICATION ===
APP_NAME=Hickmet Premium
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
DEBUG=True

# === SERVER ===
HOST=0.0.0.0
PORT=8000

# === DATABASE ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hickmet
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Sync database URL (для Alembic миграций)
SYNC_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hickmet

# === REDIS ===
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# === SECURITY ===
# Генерируйте секретный ключ: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CORS ===
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True

# === CELERY ===
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False  # True для синхронного выполнения в dev

# === DISPATCH (OUTBOX + BROKER) ===
DISPATCH_TARGET_URL=
DISPATCH_REQUEST_TIMEOUT_SECONDS=30
DISPATCH_MAX_ATTEMPTS=5
DISPATCH_RETRY_DELAY_SECONDS=60
DISPATCH_QUEUE_NAME=tour_dispatch

DISPATCH_MODULE=voucher
DISPATCH_SECTION=partner
DISPATCH_OBJECT=queries
DISPATCH_PARAM1=163
DISPATCH_PARAM2=save
DISPATCH_FORM_ID=163
DISPATCH_RETURN_FIELD=q_number
DISPATCH_AGENT_LOGIN=
DISPATCH_AGENT_PASS=
DISPATCH_TOURAGENT_NAME=ADIYA TRAVEL
DISPATCH_TOURAGENT_BIN=
DISPATCH_DEFAULT_AIRLINE=DV
DISPATCH_DEFAULT_DOC_PRODUCTION=MIA OF RK

# === SELENIUM ===
SELENIUM_HEADLESS=True
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30
SELENIUM_SCREENSHOT_PATH=./uploads/screenshots

# Настройки госсайта
GOV_SITE_URL=https://gov-site.example.kz
GOV_SITE_USERNAME=your_username
GOV_SITE_PASSWORD=your_password

# === FILE STORAGE ===
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".xlsx", ".xls", ".csv"]

# === GOOGLE SHEETS ===
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
# Пример: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms

# === LOGGING ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# === SENTRY (Error Tracking) ===
SENTRY_DSN=  # Оставьте пустым если не используете
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT=development

# === EMAIL (для уведомлений) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hickmet.kz
SMTP_TLS=True

# === TELEGRAM (для уведомлений) ===
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# === FIRST RUN ===
# Создать администратора при первом запуске
CREATE_ADMIN_ON_STARTUP=True
ADMIN_EMAIL=admin@hickmet.kz
ADMIN_PASSWORD=admin123  # ИЗМЕНИТЕ В ПРОДАКШЕНЕ!
ADMIN_FULL_NAME=Системный администратор
